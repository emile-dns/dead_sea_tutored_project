	journaltitle = {Journal of Geophysical Research: Solid Earth},
	author = {Nof, R. N. and Ziv, A. and Doin, M.-P. and Baer, G. and Fialko, Y. and Wdowinski, S. and Eyal, Y. and Bock, Y.},
	urldate = {2025-01-21},

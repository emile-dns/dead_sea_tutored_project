	langid = {english},
	keywords = {Dead Sea, {ERS}, {GPS}, {InSAR}, rebound},
	file = {Full Text PDF:/Users/emile/Zotero/storage/C3JNZHL2/Nof et al. - 2012 - Rising of the lowest place on Earth due to Dead Se.pdf:application/pdf;Snapshot:/Users/emile/Zotero/storage/ZVTL3D6N/2011JB008961.html:text/html},
}

@article{cavalie_ground_2007,
	title = {Ground motion measurement in the Lake Mead area, Nevada, by differential synthetic aperture radar interferometry time series analysis: Probing the lithosphere rheological structure},
	volume = {112},
	rights = {Copyright 2007 by the American Geophysical Union.},
	issn = {2156-2202},
